<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>Nutrition Calculator</title>

  <meta name="description" content="Nuritional Calculator">
  <meta name="keywords" content="nutrition, calculator">
  <meta property="og:title" content="Nutrition Calculator">
  <meta property="og:type" content="article">
  <meta property="og:description" content="Nutrition Calculator">
  <meta property="og:url" content="https://jamesmonk.me">
  <meta property="og:image" content="https://jamesmonk.me/img/favicon.svg">

  <link rel="shortcut icon" href="/img/favicon.svg" type="image/svg+xml" />

  <style>
    input, select {
      all: unset;
      border-bottom: .125em purple solid;
      line-height: 1.25;
    }

    input {
      text-align: center;
      width: 4ch;
    }

    select {
      text-align: center;
    }

    p:last-child {
      background-color: purple;
      color: white;
      margin-top: 2.5ch;
      padding: 1ch;
    }
  </style>

  <link rel="stylesheet" href="/css/main.css">
</head>
<body>

<header>
  <h1>Nutrition calculator</h1>
</header>

<main>
  <form>
    <p>
      I am biologically a
      <label id="label-sex" hidden>Sex</label>
      <select id="sex" onchange="calsPerDay()" value="0" aria-describedby="label-sex">
        <option value="male" selected>man</option>
        <option value="female">woman</option>
      </select>
      who is
      <label id="label-age" hidden>Age</label>
      <input id="age" type="text" onchange="calsPerDay()" placeholder="0" value="" aria-describedby="label-age">
      years old. I am
      <label id="label-height" hidden>Height (cm)</label>
      <input id="height" type="text" onchange="calsPerDay()" placeholder="0" value="" aria-describedby="label-height">cm tall
      and weigh
      <label id="label-weight" hidden>Weight (kg)</label>
      <input id="weight" type="text" onchange="calsPerDay()" placeholder="0" value="" aria-describedby="label-weight">kgs.
    </p>

    <p>
      I am
      <label id="label-physique" hidden>Physique</label>
      <select id="physique" type="text" onchange="calsPerDay()" value="0" aria-describedby="label-physique">
        <option value="2.6">shredded</option>
        <option value="2.3" selected>lean/athletic</option>
        <option value="2">carrying a little fat</option>
        <option value="1.8">obese</option>
      </select>
      and wish to
      <label id="label-goal" hidden>Goal</label>
      <select id="goal" type="text" onchange="calsPerDay()" value="0" aria-describedby="label-goal">
        <option value="0.8">lose fat</option>
        <option value="1" selected>maintain weight</option>
        <option value="1.125">gain muscle</option>
      </select>
      with a
      <label id="label-activity" hidden>Activity</label>
      <select id="activity" type="text" onchange="calsPerDay()" value="0" aria-describedby="label-activity">
        <option value="1.1">sedentary</option>
        <option value="1.2">mostly sedentary</option>
        <option value="1.3" selected>pretty sedentary</option>
        <option value="1.4">somewhat active</option>
        <option value="1.5">active</option>
        <option value="1.6">highly active</option>
        <option value="1.7">very highly active</option>
        <option value="1.8">extremely active</option>
      </select>
      activity level.
    </p>

    <p>
      You should aim for
      <strong>
        <span id="totalCals">0</span> calories (kcals),
      </strong>

      <strong>
        <span id="totalProtein">0</span>g protein,
      </strong>

      <strong>
        <span id="totalCarbs">0</span>g carbohydrates
      </strong>
      and
      <strong>
        <span id="totalFats">0</span>g fats
      </strong>
      daily.
    </p>
  </form>
</main>

<footer>
  <small>Last update: 2025/08/01</small>
</footer>

<script>
  function calsPerDay() {
    const age = document.getElementById("age").value
    const height = document.getElementById("height").value
    const weight = document.getElementById("weight").value
    const activity = document.getElementById("activity").value
    const sex = document.getElementById("sex").value
    const goal = document.getElementById("goal").value
    const physique = document.getElementById("physique").value
    let result = 0

    if (sex == "male") {
      result = (88.362 + (13.397 * weight) + (4.799 * height) - (5.677 * age)) * goal
    } else if (sex == "female") {
      result = (447.593 + (9.247 * weight) + (3.098 * height) - (4.330 * age)) * goal
    }

    document.getElementById("totalCals").innerHTML = Math.round( activity * result )

    if (goal == "0.8") {
      document.getElementById("totalProtein").innerHTML = Math.round( weight * ( physique ) )
      document.getElementById("totalCarbs").innerHTML = Math.round( ((activity * result) - (((weight * ( physique )) * 4)+((activity * result) * 0.25))) / 4 )
    } else {
      document.getElementById("totalProtein").innerHTML = Math.round( weight * ( physique * 0.9 ) )
      document.getElementById("totalCarbs").innerHTML = Math.round( ((activity * result) - (((weight * ( physique * 0.9 )) * 4)+((activity * result) * 0.25))) / 4 )
    }

    document.getElementById("totalFats").innerHTML = Math.round( ( (activity * result) * 0.25 ) / 9 )
  }
  calsPerDay();
</script>
